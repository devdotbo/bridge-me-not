{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/bioharz/.claude/scripts/debug-hook.sh"
          }
        ]
      },
      {
        "matcher": "^(Write|Edit|MultiEdit)$",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/bioharz/.claude/scripts/smart-commit.sh"
          }
        ]
      }
    ]
  }
}